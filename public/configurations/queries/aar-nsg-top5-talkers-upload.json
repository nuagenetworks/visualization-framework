{
    "id":"aar-nsgtop5-talkers-upload",
    "title":"Top 5 talkers (upload) per NSG",
    "service":"elasticsearch",
    "query":{
        "index":"{{index:nuage_dpi_flowstats}}",
        "type":"{{type:nuage_doc_type}}",
        "body":{
            "size":1000,
            "query":{
                "bool":{
                    "must":[
                        {
                            "range":{
                                "timestamp":{
                                    "gte":"{{startTime:now-24h}}",
                                    "lte":"{{endTime:now}}",
                                    "format":"epoch_millis"
                                }
                            }
                        }
                    ]
                }
            },
            "aggs":{
                "5":{
                    "filters":{
                        "filters":{
                            "SourceNSG":{
                                "query":{
                                    "term":{
                                        "SourceNSG":"{{snsg:ovs-114}}"
                                    }
                                }
                            }
                        }
                    },
                    "aggs":{
                        "SourceIP":{
                            "terms":{
                                "field":"SrcIp",
                                "size":5,
                                "order":{
                                    "Packets":"desc"
                                }
                            },
                            "aggs":{
                                "Packets":{
                                    "sum":{
                                        "field":"TotalPacketsCount"
                                    }
                                },
                                "Bytes":{
                                    "sum":{
                                        "field":"TotalBytesCount"
                                    }
                                },
                                "MBs":{
                                    "sum":{
                                        "field":"TotalMB"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
