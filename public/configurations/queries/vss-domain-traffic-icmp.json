{
    "id":"vss-domain-traffic-icmp",
    "title":"ICMP connections vs Time",
    "service":"elasticsearch",
    "query":{
        "index":"{{index:nuage_flow}}",
        "type":"{{type:nuage_doc_type}}",
        "body":{
            "size":0,
            "query":{
                "bool":{
                    "must":[
                        {
                            "range":{
                                "timestamp":{
                                    "gte":"{{startTime:now-24h}}",
                                    "lte":"{{endTime:now}}",
                                    "format":"epoch_millis"
                                }
                            }
                        },
                        {
                            "term": {
                                "nuage_metadata.enterpriseName":"{{enterpriseName:chord_enterprise}}"
                            }
                        },
                        {
                            "term": {
                                "{{domainType:nuage_metadata.domainName}}":"{{domainName:chord_domain}}"
                            }
                        },
                        {
                            "term": {
                                "type":"{{actionType:ALLOW}}"
                            }
                        },
                        {
                            "term": {
                                "protocol":"ICMP"
                            }
                        }
                    ]
                }
            },
            "aggs": {
                "timestamp": {
                    "date_histogram": {
                        "field": "timestamp",
                        "interval": "{{interval:1h}}"
                    },
                    "aggs": {
                        "SumOf": {
                            "sum": {
                                "field": "packets"
                            }
                        }
                    }
                }
            }
        }
    }
}
