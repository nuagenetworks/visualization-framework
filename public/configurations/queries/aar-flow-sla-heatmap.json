{
    "id": "aar-flow-sla-heatmap",
    "title": "Flows Sla HeatMap",
    "service": "elasticsearch",
    "query": {
        "index": "{{index:nuage_dpi_flowstats}}",
        "type": "{{type:nuage_doc_type}}",
        "body": {
            "size": 0,
            "sort": [
                {
                    "timestamp": {
                        "order": "desc"
                    }
                }
            ],
            "query": {
                "bool": {
                    "must": [
                        {
                            "range": {
                                "timestamp": {
                                    "gte":"{{heatmapstartTime:now-15m}}",
                                    "lte":"{{heatmapendTime:now}}",
                                    "format": "epoch_millis"
                                }
                            }
                        }
                    ],
                    "filter": {
                        "bool":{
                            "must":[
                                {
                                    "term": {
                                        "SourceNSG":"{{snsg:ovs-1}}"
                                     }
                                },
                                {
                                    "term":{
                                        "DestinationNSG":"{{dnsg:ovs-2}}"
                                     }
                                }
                            ]
                        }
                    }
                }
            },
            "aggs": {
                "date_histo": {
                    "date_histogram": {
                        "field": "timestamp",
                        "interval": "{{heatmapinterval:30s}}"
                    },
                    "aggs": {
                        "application": {
                            "terms": {
                                "field": "Application"
                            },
                            "aggs": {
                                "slastatus": {
                                    "terms": {
                                        "size": 1,
                                        "field": "SlaStatus"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
