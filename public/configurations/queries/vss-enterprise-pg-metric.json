{
    "id": "vss-enterprise-pg-metric",
    "title": "Distinct PG count per enterprise",
    "service": "elasticsearch",
    "query": {
        "index": "{{index:nuage_flow}}",
        "type": "{{type:nuage_doc_type}}",
        "body": {
            "size": 0,
            "query": {
                "bool": {
                    "must": [
                        {
                            "term": {
                                "nuage_metadata.enterpriseName": "{{enterpriseName:chord_enterprise}}"
                            }
                        }
                    ]
                }
            },
            "aggs": {
                "timezones": {
                    "filters": {
                        "filters": {
                            "Prev 24": {
                                "range": {
                                    "timestamp": {
                                        "gte": "now-48h",
                                        "lte": "now-24h"
                                    }
                                }
                            },
                            "Last 24": {
                                "range": {
                                    "timestamp": {
                                        "gte": "now-24h",
                                        "lte": "now"
                                    }
                                }
                            }
                        }
                    },
                    "aggs": {
                        "source": {
                            "nested": {
                                "path": "nuage_metadata.src-pgmem-info"
                            },
                            "aggs": {
                                "pg": {
                                    "cardinality": {
                                        "field": "nuage_metadata.src-pgmem-info.name"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}