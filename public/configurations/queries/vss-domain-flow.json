{
    "id":"vss-domain-flow",
    "title":"Flows per Domain",
    "service":"elasticsearch",
    "query":{
        "index":"{{index:nuage_flow-2018-09-19}}",
        "type":"{{type:nuage_doc_type}}",
        "body":{
            "size":0,
            "query":{
                "bool": {
                    "must":[
                        {
                            "range":{
                                "timestamp":{
                                    "gte":"{{startTime:now-24h}}",
                                    "lte":"{{endTime:now}}",
                                    "format":"epoch_millis"
                                }
                            }
                        },
                        {
                            "term": {
                                "nuage_metadata.enterpriseName":"{{enterpriseName:chord_enterprise}}"
                            }
                        },
                        {
                            "term": {
                                "{{domainType:nuage_metadata.domainName}}":"{{domainName:chord_domain}}"
                            }
                        }
                    ]
                }
            },
            "aggs": {
                "hash": {
                    "terms": {
                        "field": "nuage_metadata.flowid",
                        "size": 10,
                        "order": {
                            "SumOf": "desc"
                        }   
                    },
                    "aggs": {
                        "SumOf": {
                            "sum": {
                                "field": "packets"
                            }
                        },
                        "source": {
                            "terms": {
                                "field": "{{source_field:nuage_metadata.src-pgmem}}",
                                "size": 10,
                                "order": {
                                    "SumOf": "desc"
                                }   
                            },
                            "aggs": {
                                "SumOf": {
                                    "sum": {
                                        "field": "packets"
                                    }
                                }
                            }
                        },
                        "destination": {
                            "terms": {
                                "field": "{{destination_field:nuage_metadata.dst-pgmem}}",
                                "size": 10,
                                "order": {
                                    "SumOf": "desc"
                                }
                            },
                            "aggs": {
                                "SumOf": {
                                    "sum": {
                                        "field": "packets"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
