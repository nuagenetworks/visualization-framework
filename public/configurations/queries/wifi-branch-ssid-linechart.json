{
    "id":"wifi-branch-ssid-linechart",
    "title":"TBD",
    "service":"elasticsearch",
    "query":{
        "index":"{{index:nuage_wifi}}",
        "type":"{{type:nuage_doc_type}}",
        "body":{
            "size":0,
            "query":{
                "bool":{
                    "must":[
                        {
                            "range":{
                                "timestamp":{
                                    "gte":"{{startTime:now-24h}}",
                                    "lte":"{{endTime:now}}",
                                    "format":"epoch_millis"
                                }
                            }
                        },
                        {
                            "term": {
                                "enterpriseName":"{{enterpriseName:wifi_enterprise}}"
                            }
                        },
                        {
                            "term": {
                                "nsg":"{{nsg:wifi_nsg}}"
                            }
                        },
                        {
                            "term": {
                                "ssid-name":"{{ssid}}"
                            }
                        }
                    ]
                }
            },
            "aggs": {
                "ts": {
                    "date_histogram": {
                        "field": "timestamp",
                        "interval": "{{interval:1h}}"
                    },
                    "aggs": {
                        "Users": {
                            "terms": {
                                "field": "client_mac",
                                "size": 0,
                                "order": {
                                    "SumOf": "desc"
                                }
                            },
                            "aggs": {
                                "SumOf": {
                                    "sum": {
                                        "script": {
                                            "inline": "doc['rx_bytes'].value + doc['tx_bytes'].value"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
