{
    "id":"aar-nsg-resource-linechart",
    "title":"TBD",
    "service":"elasticsearch",
    "query":{
        "index":"{{index:nuage_sysmon}}",
        "type":"{{type:nuage_doc_type}}",
        "body":{
            "size":0,
            "query":{
                "bool":{
                    "must":[
                        {
                            "range":{
                                "timestamp":{
                                    "gte":"{{startTime:now-24h}}",
                                    "lte":"{{endTime:now}}",
                                    "format":"epoch_millis"
                                }
                            }
                        },
                        {
                            "term": {
                                "system_id": "{{nsgSystemId}}"
                            }
                        }
                    ]
                }
            },
            "aggs": {
                "ts": {
                    "date_histogram": {
                        "field": "timestamp",
                        "interval": "{{interval:1h}}"
                    },
                    "aggs": {
                        "CPU": {
                            "avg": {
                                "field": "cpu"
                            }                                            
                        },
                        "MEMORY": {
                            "avg": {
                                "field": "memory"
                            }                                            
                        }
                    }
                }
            }
        }
    }
}
