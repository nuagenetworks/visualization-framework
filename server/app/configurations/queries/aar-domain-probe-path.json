{
    "id":"aar-domain-probe-path",
    "title":"TBD",
    "service":"elasticsearch",
    "query":{
        "index":"{{index:nuage_dpi_probestats}}",
        "type":"{{type:nuage_doc_type}}",
        "body":{
            "size":0,
            "query":{
                "bool":{
                    "must":[
                        {
                            "range":{
                                "timestamp":{
                                    "gte":"{{startTime:now-24h}}",
                                    "lte":"{{endTime:now}}",
                                    "format":"epoch_millis"
                                }
                            }
                        }
                    ]
                }
            },
            "aggs":{
                "snsg":{
                    "terms":{
                        "field":"SourceNSG",
                        "size":5,
                        "order":{
                            "_count":"desc"
                        }
                    },
                    "aggs":{
                        "suplink":{
                            "terms":{
                                "field":"SrcUplink",
                                "size":5,
                                "order":{
                                    "_count":"desc"
                                }
                            },
                            "aggs":{
                                "dnsg":{
                                    "terms":{
                                        "field":"DestinationNSG",
                                        "size":5,
                                        "order":{
                                            "_count":"desc"
                                        }
                                    },
                                    "aggs":{
                                        "duplink":{
                                            "terms":{
                                                "field":"DstUplink",
                                                "size":5,
                                                "order":{
                                                    "_count":"desc"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
