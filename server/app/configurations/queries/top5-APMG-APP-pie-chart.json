{
    "id":"top5-APMG-APP-pie-chart",
    "title":"TBD",
    "service":"elasticsearch",
    "query":{
        "size":0,
        "query":{
            "bool":{
                "must":[
                    {
                        "range":{
                            "timestamp":{
                                "gte":"{{startTime:now-24h}}",
                                "lte":"{{endTime:now}}",
                                "format":"epoch_millis"
                            }
                        }
                    },
                    {
                        "term":{
                            "EnterpriseName":"{{enterpriseName:test_organization}}"
                        }
                    }
                ]
            }
        },
        "aggs":{
            "APMGroup":{
                "terms":{
                    "field":"APMGroup",
                    "size":5,
                    "order":{
                        "Sum of MB":"desc"
                    }
                },
                "aggs":{
                    "Sum of MB":{
                        "sum":{
                            "field":"TotalMB"
                        }
                    },
                    "Application":{
                        "terms":{
                            "field":"Application",
                            "size":5,
                            "order":{
                                "Sum of MB":"desc"
                            }
                        },
                        "aggs":{
                            "Sum of MB":{
                                "sum":{
                                    "field":"TotalMB"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
