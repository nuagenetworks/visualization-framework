{
    "id":"top5-users-table",
    "title":"Top 5 Users",
    "service":"elasticsearch",
    "query":{
        "index":"{{index:nuage_dpi_flowstats}}",
        "type":"{{type:nuage_doc_type}}",
        "body":{
            "size":0,
            "query":{
                "bool":{
                    "must":[
                        {
                            "range":{
                                "timestamp":{
                                    "gte":"{{startTime:now-24h}}",
                                    "lte":"{{endTime:now}}",
                                    "format":"epoch_millis"
                                }
                            }
                        },
                        {
                            "term":{
                                "EnterpriseName":"{{enterpriseName:test_org}}"
                            }
                        }  
                    ]
                }
            },
            "aggs":{
                "SourceIP":{
                    "terms":{
                        "field":"SrcIp",
                        "size":5,
                        "order":{
                            "TotalBytesCount":"desc"
                        }
                    },
                    "aggs":{
                        "TotalPacketsCount":{
                            "sum":{
                                "field":"TotalPacketsCount"
                            }
                        },
                        "TotalBytesCount":{
                            "sum":{
                                "field":"TotalBytesCount"
                            }
                        },
                        "SourceNSG":{
                            "terms":{
                                "field":"SourceNSG",
                                "size":5,
                                "order":{
                                    "TotalBytesCount":"desc"
                                }
                            },
                        "aggs":{
                            "TotalPacketsCount":{
                                "sum":{
                                    "field":"TotalPacketsCount"
                                }
                            },
                            "TotalBytesCount":{
                                "sum":{
                                    "field":"TotalBytesCount"
                                }
                            }
                        }
                      }
                    }
                }
            }
        }
    }
}
