{
    "id":"aar-nsg-top10-app",
    "title":"Top 10 App per NSG",
    "service":"elasticsearch",
    "query":{
        "index":"{{index:nuage_dpi_flowstats}}",
        "type":"{{type:nuage_doc_type}}",
        "body":{
            "size": 0,
            "query":{
                "bool":{
                    "must":[
                        {
                            "range":{
                                "timestamp":{
                                    "gte":"{{startTime:now-24h}}",
                                    "lte":"{{endTime:now}}",
                                    "format":"epoch_millis"
                                }
                            }
                        },
                        {
                            "term":{
                                "EnterpriseName":"{{enterpriseName:test_organization}}"
                            }
                        },
                        {
                            "term":{
                                "SourceNSG":"{{snsg:ovs-114}}"
                            }
                        }
                    ]
                }
            },
            "aggs":{
                "Application":{
                    "terms":{
                        "field":"Application",
                        "size":10,
                        "order":{
                            "Sum of MB":"desc"
                        }
                    },
                    "aggs":{
                        "Sum of MB":{
                            "sum":{
                                "field":"TotalMB"
                            }
                        }
                    }
                }
            }
        }
    }
}
